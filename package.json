{
  "name": "iobroker.mihome-airpurifier",
  "version": "0.1.8",
  "description": "mihome-airpurifier",
  "author": {
    "name": "Johannes Jaeger",
    "email": "johannesjaegeroffice@gmail.com"
  },
  "homepage": "https://github.com/JoJ123/ioBroker.mihome-airpurifier",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "xiaomi",
    "air",
    "purifier",
    "mihome",
    "airpurifier",
    "Smart Home",
    "home automation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/JoJ123/ioBroker.mihome-airpurifier"
  },
  "dependencies": {
    "@iobroker/adapter-core": "2.2.1",
    "es6-promise": "4.2.6",
    "miio": "git+https://github.com/JoJ123/miio.git"
  },
  "devDependencies": {
    "@iobroker/testing": "2.6.0",
    "@types/chai": "4.2.11",
    "@types/chai-as-promised": "7.1.2",
    "@types/gulp": "4.0.6",
    "@types/mocha": "7.0.2",
    "@types/node": "12.12.30",
    "@types/proxyquire": "1.3.28",
    "@types/sinon": "7.5.2",
    "@types/sinon-chai": "3.2.3",
    "@typescript-eslint/eslint-plugin": "2.24.0",
    "@typescript-eslint/parser": "2.24.0",
    "axios": "0.19.2",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "eslint": "6.8.0",
    "gulp": "4.0.2",
    "mocha": "10.2.0",
    "nyc": "15.0.0",
    "proxyquire": "2.1.3",
    "rimraf": "3.0.2",
    "sinon-chai": "3.5.0",
    "sinon": "8.1.1",
    "source-map-support": "0.5.17",
    "ts-node": "8.6.2",
    "typescript": "3.8.3"
  },
  "main": "build/main.js",
  "scripts": {
    "prebuild": "rimraf ./build",
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "npm run build:ts",
    "watch:ts": "tsc -p tsconfig.build.json --watch",
    "watch": "npm run watch:ts",
    "test:ts": "mocha --opts test/mocha.custom.opts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "coverage": "nyc npm run test:ts",
    "lint": "eslint --ext .ts src"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "bugs": {
    "url": "https://github.com/JoJ123/ioBroker.mihome-airpurifier/issues"
  },
  "readmeFilename": "README.md"
}
